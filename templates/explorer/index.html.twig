{% extends 'base.html.twig' %}

{% block title %}Explorer{% endblock %}

{% block body %}

<div class="pt-6 min-vh-100">
    <div class="container">
        {% if files|length == 0 %}

            <div class="container">
                <h5>You have no files stored</h5>
            </div>
        {% else %}
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">File name</th>
                        <th scope="col">File Extension</th>
                        <th scope="col">File Size</th>
                        <th scope="col">Manage</th>
                    </tr>
                </thead>
                <tbody>
                    {% for file in files %}
                        <tr>
                            <td>
                                {{ file.originalFileName }}
                                <a href="#" class="link-secondary">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                            </td>
                            <td>
                                {{ file.fileExtension }}
                            </td>
                            <td>
                                {{ file.fileSize }}
                            </td>
                            <td>
                                <a href="/uploads/{{ file.fileName }}" class="link-success" download>
                                    <i class="bi bi-cloud-arrow-down-fill"></i>
                                </a>
                                <a href="#" class="link-secondary">
                                    <i class="bi bi-eye-fill"></i>
                                </a>
                                <a href="#" class="link-danger">
                                    <i class="bi bi-trash-fill"></i>
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                    {# {% for form in forms %}
                        <tr>
                            <td>
                                {{ form_start(form.explorerUpdateForm) }}
                                    <div class="row">
                                        <div class="col-10">
                                            {{ form_widget(form.explorerUpdateForm.originalFileName) }}
                                        </div>
                                        <div class="col-2">
                                            <button type="submit" class="btn btn-outline-dark">Update</button>
                                        </div>
                                    </div>
                                {{ form_end(form.explorerUpdateForm) }}
                            </td>
                            <td>
                                {{ form.file.fileExtension }}
                            </td>
                            <td>
                                {{ form.file.fileSize }}
                            </td>
                            <td>
                                <a href="/uploads/{{ form.file.fileName }}" class="link-success" download>
                                    <i class="bi bi-cloud-arrow-down-fill"></i>
                                </a>
                                <a href="#" class="link-secondary">
                                    <i class="bi bi-eye-fill"></i>
                                </a>
                                <a href="#" class="link-danger">
                                    <i class="bi bi-trash-fill"></i>
                                </a>
                            </td>

                        </tr>
                    {% endfor %} #}
                </tbody>
            </table>
        {% endif %}
    </div>
</div>
{% endblock %}
